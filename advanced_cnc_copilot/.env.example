# ==============================================
# FANUC RISE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values

# ----- APPLICATION -----
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ----- DATABASE -----
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rise_enterprise
DB_USER=postgres
DB_PASSWORD=postgres

# ----- REDIS -----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----- SECURITY -----
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=RS256
JWT_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7

# ----- LLM PROVIDERS (Optional - comment out if not using) -----
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# ----- CNC CONNECTION -----
# Fanuc FOCAS settings
FANUC_IP=192.168.1.10
FANUC_PORT=8193
FANUC_TIMEOUT=5000

# Mock mode (set to true if no physical CNC available)
USE_MOCK_HAL=true

# ----- LOGGING -----
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30

# ----- CLOUD SETTINGS (Optional) -----
CLOUD_ENABLED=false
CLOUD_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ----- MONITORING -----
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ----- FRONTEND -----
DASHBOARD_URL=http://localhost:8000/dashboard
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
